{
	"name": "@decentology/unstated-next",
	"version": "1.1.9",
	"description": "200 bytes to never think about React state management libraries ever again",
	"exports": {
		".": {
			"import": "./index.ts"
		}
	},
	"source": "src/unstated-next.tsx",
	"main": "dist/unstated-next.js",
	"module": "dist/unstated-next.mjs",
	"unpkg": "dist/unstated-next.umd.js",
	"types": "dist/unstated-next.d.ts",
	"amdName": "UnstatedNext",
	"sideEffects": false,
	"publishConfig": {
		"access": "public",
		"exports": null
	},
	"scripts": {
		"format": "prettier --write '**'",
		"clean": "rimraf dist",
		"prebuild": "rimraf dist",
		"build": "microbundle --external react --globals react=React --strict --no-compress",
		"test": "ava",
		"lint": "tsc --noEmit"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"peerDependencies": {
		"react": "^17.0.2"
	},
	"engines": {
		"node": ">=12.0.0"
	},
	"devDependencies": {
		"@types/react": "^16.8.15",
		"@types/react-dom": "^16.8.4",
		"ava": "^1.4.1",
		"lint-staged": "^8.1.5",
		"microbundle": "^0.11.0",
		"prettier": "^1.17.0",
		"rimraf": "^3.0.2",
		"ts-node": "^8.1.0",
		"typescript": "^3.4.5"
	},
	"lint-staged": {
		"*": [
			"prettier --write",
			"git add"
		]
	}
}
